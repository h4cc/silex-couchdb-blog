{% extends "layout.html" %}

{% block content %}

    <h2>Showing post</h2>


    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">{{ post.title }}</h3>
        </div>
        <div class="panel-body">
            Tags:
            {% for tag in post.tags %}
                <a href="{{ path('tag', {tag: tag}) }}">{{ tag }}</a>
            {% endfor %}
        </div>
        <div class="panel-body">
            {{ post.content }}
        </div>
    </div>

    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Add Comment</h3>
        </div>
        <div class="panel-body">
            <form action="{{ path('post_comment_add', {id: post.id}) }}" method="post">
                {{ form_widget(comment_form) }}

                <input type="submit" name="submit" />
            </form>
        </div>
    </div>

    <h3>Comments</h3>

    {% for comment in comments %}
        <div class="panel panel-default">
            <div class="panel-body">
                {{ comment.comment }}
            </div>
            <div class="panel-footer">
                <h3 class="panel-title">{{ comment.author }} <small>- [{{ comment.created|date }}]</small></h3>
            </div>
        </div>
    {% endfor %}




{% endblock %}


